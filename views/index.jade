extends layout

block content
  h1 Push Notification Demo

  div.push-enabling 
  label.push-switch.mdl-switch.mdl-js-switch.mdl-js-ripple-effect(for="push-switch") 
    input#push-switch.mdl-switch__input(type="checkbox" disabled) 
    span.mdl-switch__label Enable Push Notifications

  br
  br

  div#pushNotifications.not-subcribed.notification-details
    form(class="payloadForm")
      div.mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
        input.mdl-textfield__input#payload(type="text")
        label.mdl-textfield__label(for="title") Payload

      br    
      input.mdl-button.mdl-js-button.mdl-button--raised.mdl-js-ripple-effect(type="submit" value="Send Push Notification")
    h4 Or Copy And Paste The cURL Command Below Into Your Terminal
    code#curlCommand

  div
  h4 Or Custom Notification From The Browser (Without The Push API)
  
  form(class="custom-notification")
    div.mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
      input.mdl-textfield__input#title(type="text")
      label.mdl-textfield__label(for="title") Title

    br

    div.mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
      input.mdl-textfield__input#body(type="text")
      label.mdl-textfield__label(for="body") Body

    br

    div.mdl-textfield.mdl-js-textfield.mdl-textfield--floating-label
      input.mdl-textfield__input#image(type="text")
      label.mdl-textfield__label(for="image") Image URL

    br

    input.mdl-button.mdl-js-button.mdl-button--raised.mdl-js-ripple-effect(type="submit")
